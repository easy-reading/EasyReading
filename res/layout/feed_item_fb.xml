<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTitleFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:gravity="center"
        android:background="@drawable/side_top_shade"
        android:padding="@dimen/default_padding"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDescFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:gravity="center"
        android:background="@drawable/side_shade"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewTimeFb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:gravity="center"
        android:background="@drawable/side_shade"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tooth_height"
         android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/zigzag" />

</LinearLayout>